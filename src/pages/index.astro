---
  import BlogPostPreview from '@/components/BlogPostPreview.astro';
  import Email from '@/components/icons/Email.astro';
  import GitHub from '@/components/icons/GitHub.astro';
  import Linkedin from '@/components/icons/Linkedin.astro';
  import Twitter from '@/components/icons/Twitter.astro';
  import { EMAIL, HANDLE_GITHUB, HANDLE_TWITTER } from '@/constants';
  import Layout from '@/layouts/Layout.astro';

  const allPosts = await Astro.glob('./caseStudies/*/index.mdx');
  const sortedRecentPosts = allPosts
    .sort((a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf())
    .slice(0, 3);
---

<Layout>
  <div class="space-y-6">
    <h1 class="text-3xl font-bold md:text-5xl">Hi, I'm Brian ðŸ‘‹</h1>
    <h2 class="text-lg">I'm a researcher in pharmacology and bioengineering. I like to make things for fun :)</h2>
    <div class="flex space-x-3">
      <a class="hover:bg-slate-100 py-2 px-3 rounded-lg dark:hover:bg-neutral-800"
        href={`https://www.linkedin.com/in/brian-chan-531395173}`} target="_blank">
        <Linkedin />
      </a>
      <a class="hover:bg-slate-100 py-2 px-3 rounded-lg dark:hover:bg-neutral-800"
        href={`https://github.com/${HANDLE_GITHUB}`} target="_blank">
        <GitHub />
      </a>
      <a class="hover:bg-slate-100 py-2 px-3 rounded-lg dark:hover:bg-neutral-800"
        href={`https://twitter.com/${HANDLE_TWITTER}`} target="_blank">
        <Twitter />
      </a>
      <a class="hover:bg-slate-100 py-2 px-3 rounded-lg dark:hover:bg-neutral-800" href={`mailto:${EMAIL}`}
        target="_blank">
        <Email />
      </a>
    </div>

    <div class="space-y-6">
      <div class="flex space-x-3">
      </div>
      <div>
        <h1 class="text-3x1 font-bold md:text-5x1"> Imperial College London </h1>
        <p>2021 - 2022</p>
        <a href="https://www.imperial.ac.uk/study/pg/medicine/genes-drugs-stem-cells/"
          class="hover:underline rounded-lg dark:hover:underline text-yellow-800 dark:text-purple-200">MSc in Genes,
          Drugs
          and Stem
          cells</a>
      </div>
      <div>
        <h1 class="text-3x1 font-bold md:text-5x1"> The University of Toronto </h1>
        <p>2017 - 2021</p>
        <a href="https://artsci.calendar.utoronto.ca/section/Pharmacology-and-Toxicology"
          class="hover:underline rounded-lg dark:hover:underline text-yellow-800 dark:text-purple-200">Specialist in
          Pharmacology and
          Toxicology</a>
      </div>
      <div>
        <h1 class="text-3x1 font-bold md:text-5x1"> Google Certificate </h1>
        <p>2022</p>
        <a href="https://www.coursera.org/professional-certificates/google-data-analytics"
          class="hover:underline rounded-lg dark:hover:underline text-yellow-800 dark:text-purple-200">Data
          Analytics</a>
      </div>

    </div>
    <!-- <Newsletter /> -->
    <div class="py-6">
      <h3 class="text-4xl font-semibold">Latest Projects</h3>
      {sortedRecentPosts.map((p) =>
      <BlogPostPreview post={p} />)}
    </div>
  </div>
</Layout>