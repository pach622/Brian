---
import Layout from '@/layouts/Layout.astro';
import Newsletter from '@/components/Newsletter.astro';
import '@/styles/base.css';
import { classNames } from '@/utils/styling';
import { getHumanizedDate } from '@/utils/date';

// Validate and provide default frontmatter to avoid errors
const { frontmatter = { 
  title: 'Default Title', 
  summary: 'Default Summary', 
  workDuration: 'N/A', 
  companyWebsite: '#', 
  location: 'Unknown Location' 
} } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.summary}>
  <div>
    <article class="prose lg:prose-lg dark:prose-invert">
      <!-- Page Title -->
      <h1>{frontmatter.title}</h1>
      
      <!-- Work Duration and Location -->
      <p>
        👨🏻‍🔧 Was here between {frontmatter.workDuration} at 
        <a href={frontmatter.companyWebsite} target="_blank" rel="noopener noreferrer">
          {frontmatter.location}
        </a>
      </p>
      
      <!-- Slot Content -->
      <slot />
    </article>
  </div>
</Layout>
